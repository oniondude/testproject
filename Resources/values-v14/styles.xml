<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
     
     <style name="AppBaseTheme" >
        <!-- API 14 theme customizations can go here. -->
        <item name="android:textAppearanceLargePopupMenu" >@style/SIMPopupMenu_textAppearanceLargePopupMenu</item>
		<item name="android:textAppearanceSmallPopupMenu" >@style/SIMPopupMenu_textAppearanceSmallPopupMenu</item>
        <item name="android:actionBarStyle">@style/SIMActionBar</item>
      	<item name="android:editTextStyle">@style/SIMEditTextStyle</item>
		<item name="android:spinnerItemStyle">@style/SIM_spinner_style</item> 
		<item name="android:popupMenuStyle">@style/SIMPopupMenu</item>
       
    </style>
	
     <style name="Theme.Transparent" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>
     
     
    <style name="SIM_spinner_style" >
            <item name="android:background">@drawable/sim_spinner_background</item>
            <item name="android:layout_marginLeft">10dp</item>
            <item name="android:layout_marginRight">10dp</item>
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:paddingLeft">15dp</item>
            <item name="android:paddingRight">15dp</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:popupBackground">#FFF</item>
            <item name="android:textColor">#3A4E56</item>
            <item name="android:textSize">15sp</item>
        </style> 
     
    <!-- Edittext Style -->
	<style name="SIMEditTextStyle" parent="@android:style/Widget.Holo.Light.EditText">
	    	<item name="android:background">@drawable/sim_edittext_background</item>
            <item name="android:layout_marginLeft">10dp</item>
            <item name="android:layout_marginRight">10dp</item>
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:paddingLeft">15dp</item>
            <item name="android:paddingRight">15dp</item>
            <item name="android:paddingTop">10dp</item>
            <item name="android:paddingBottom">10dp</item>
            <item name="android:textColor">#3A4E56</item>
            <item name="android:textSize">17sp</item>
            <item name="android:textColorHint">@android:color/darker_gray</item>
            <item name="android:ems">10</item>
            <item name="android:focusable">true</item>
            <item name="android:editable">true</item>
            <item name="android:enabled">true</item>
            <item name="android:textColorHighlight">#3A4E56</item>
            <item name="android:textCursorDrawable">@null</item>
	</style>
    
	<!-- Actionbar Style -->
    <style name="SIMActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
	    <item name="android:background">@drawable/actionbar_background</item>
	</style> 
     <!-- Popup Menu Style -->
	<style name="SIMPopupMenu" parent="android:style/Widget.Holo.Light.ListPopupWindow">
	    <item name="android:background">#f5fdef</item> 
	    <item name="android:divider">#F00</item>
        <item name="android:dividerHeight">4dp</item>
	</style>
	<style name="SIMPopupMenu_textAppearanceLargePopupMenu" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Large">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SIMPopupMenu_textAppearanceSmallPopupMenu" parent="@android:style/TextAppearance.Holo.Widget.PopupMenu.Small">
        <item name="android:textColor">#000000</item>
    </style>
	
    
	
	<style name="SpinnerItem_example" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
	</style>
	
	
	
</resources>
